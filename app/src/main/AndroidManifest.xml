<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aadpractica3">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".AnadirJugadorActivity"
            android:label="@string/app_anadir_jugador"
            android:parentActivityName=".PlantillaActivity" />
        <activity
            android:name=".AnadirActivity"
            android:label="@string/app_anadir"
            android:parentActivityName=".EquipoActivity" />
        <activity
            android:name=".EditarActivity"
            android:label="@string/app_editar"
            android:parentActivityName=".EquipoActivity" />
        <activity
            android:name=".PlantillaActivity"
            android:label="@string/app_plantilla"
            android:parentActivityName=".EquipoActivity" />
        <activity
            android:name=".EquipoActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>